OBJS=$(CVD_OBJS)



ifeq (@osx_hacks@,yes)
	soname=libcvd.dylib
	soname1=libcvd-@major@.dylib
	soname2=libcvd-@major@.@minor@.dylib
	shared=-dynamiclib
else
	soname=libcvd.so
	soname1=libcvd.so.@major@
	soname2=libcvd.so.@major@.@minor@
	shared=-shared
endif

sos= $(soname) $(soname1) $(soname2)

all: libcvd.a $(soname) progs

$(soname): $(OBJS)
	rm -f $(sos)
	$(CXX) $(CXXFLAGS) $(shared) -o $(soname2) $(OBJS) $(LDFLAGS) $(LOADLIBES)
	ln -s $(soname2) $(soname1)
	ln -s $(soname1) $(soname)

libcvd.a: $(OBJS)
	$(AR) crvs libcvd.a $(OBJS)
	$(RANLIB) libcvd.a


# Before we compile the test programs we need to augment the
# search paths with the path to libcvd, and also add libcvd to the
# libraries to use
CPPFLAGS = -I. @CPPFLAGS@
LDFLAGS = -L. -Wl,-R. @LDFLAGS@
LOADLIBES = -lcvd @LIBS@

PROGS=@progs@
TESTPROGS=@testprogs@

$(PROGS):$(soname)
$(TESTPROGS):$(soname)

testprogs: $(TESTPROGS)
progs: $(PROGS)


@docs@:
	doxygen Doxyfile

#If the mandir is older than the lib, then remake. A bit of a hack
man: libcvd.a
	doxygen Doxyfile
	touch man

install: progs $(soname) libcvd.a
	mkdir -p $(includedir)
	mkdir -p $(libdir)
	mkdir -p $(bindir)
	cp -r cvd $(includedir)
	cp $(soname2) $(libdir)
	rm -f  $(libdir)/$(soname1) $(libdir)/$(soname)
	ln -s  $(libdir)/$(soname2) $(libdir)/$(soname1)
	ln -s  $(libdir)/$(soname1) $(libdir)/$(soname)
	cp libcvd.a $(libdir)
	cp $(PROGS) $(bindir)
	mkdir -p '$(mandir)'

clean:
	/bin/rm -f tmp libcvd.a $(sos)
	find . -name '*.o' | xargs rm -f
	find progs/ -perm +0100 -type f | xargs rm -f
	rm -rf html man
distclean: clean
	/bin/rm -f Makefile config.h config.status config.cache config.log cvd/config.h

depend:
	rm -f .sourcefiles
	find . -name "*.cxx" -o -name "*.cc" -o -name "*.cpp" -o -name "*.c" -o -name "*.C" > .sourcefiles
	rm -f .deps
	bash generate_dependencies.bash "-I. $(CPPFLAGS)" > .deps

.PHONY: ChangeLog

ChangeLog:
	cvs log | gawk -f make/log_to_changelog.awk > ChangeLog

.PRECIOUS: %.o

%.o : %.cc
	$(CXX) -I. $(OFLAGS) $(CPPFLAGS) $(CXXFLAGS) -c $< -o $@

%.o: %.cpp
	$(CXX) -I. $(OFLAGS)  $(CPPFLAGS) $(CXXFLAGS) -c $< -o $@

%.o: %.cxx
	$(CXX) -I. $(OFLAGS) $(CPPFLAGS) $(CXXFLAGS) -c $< -o $@

%.o: %.C
	$(CXX) -I. $(CPPFLAGS) $(CXXFLAGS) -c $< -o $@

%: %.o
	$(CXX) -o $@ $< $(LDFLAGS) $(LOADLIBES)


include .deps
